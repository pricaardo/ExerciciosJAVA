import java.util.*;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
  
  /*Escreva um programa que leia uma frasse digitada pelo usuario e escreva
  e conte quantos caracteres ela possui (desconsidere os espacos) */
      
      Scanner scan1 = new Scanner(System.in);
      
      System.out.print("Digite uma frase: ");
      String frase_usuario = scan1.nextLine();
      String  frase_usuario_sem_espaco = frase_usuario.replace(" ", ""); // retira os espacos
      System.out.println(frase_usuario_sem_espaco.length()); 
      scan1.close();
      
  /*Faça um programa que leia ma string e substitua todas as ocorrencias 
  da letra "a" (maiscula e minuscula) por "@". */    
      
      Scanner scan2 = new Scanner(System.in);
      System.out.print("Digite uma frase: ");
      String frase_usuario = scan2.nextLine();
      String frase_usuario_arroba = frase_usuario.replace("a", "@").replace("A","@");
      System.out.print(frase_usuario_arroba);
      scan2.close();
      
  /*Crie um array com os seguintes numeros inteiros: 10, 25, 30, 45, 50. */    
      
      Scanner scan3 = new Scanner(System.in);
                    //  0   1   2   3   4
      int[] numeros = {10, 25, 30, 45, 50};
      
      System.out.print("Digite um número: ");
      int numero_usuario = scan3.nextInt();
      
      boolean achei_numero = false;
      
      for(int i = 0; i < numeros.length ; i++) {
          if(numeros[i] == numero_usuario) {
            achei_numero = true;
            break;
          }
      }
      
      
      if (achei_numero) {
        System.out.println("Seu numero esta na lista");
      } else {
        System.out.println("Seu numero nao esta na lista");
      } */
      
      
      
